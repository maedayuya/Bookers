<body>

<p id="notice">
<% if flash[:notice] %>
	<%= flash[:notice] %>
<% end %>
</p>

<h1>Books</h1>

<table>
<thead>
<tr>
<th>Title</th>
<th>Body</th>
<th colspan="3"></th>
</tr>
</thead>

<tbody>
<% @books.each do |book| %>
<tr>
<td>
<%= book.title %>
</td>
<td>
<%= book.body %>
</td>
<td>

<%= link_to 'Show', book_path(book), class:"show_#{book.id}" %>
<%= link_to 'Edit', edit_book_path(book), class:"edit_#{book.id}" %>
<%= link_to 'Destroy', book_path(book), class:"destroy_#{book.id}", method: :delete, "data-confirm" => "Are you sure?" %>

</td>
</tr>
<% end %>
</tbody>
</table>

<h2>New book</h2>
<!-- form_for部分 -->
<%= form_for(@book) do |f| %>

<div class="field">
  <label for="book_title">Title</label>
<%= f.text_field :title, class:"book_title" %>
</div>

<div class="field">
  <label for="book_body">Body</label>
<%= f.text_area :body, class:"book_body" %>

<br><%= f.submit 'Create Book' %></br>

<% end %>
</body>